{
    "env": {
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "class-methods-use-this":"off",
        "indent": ["error", 4],
        "semi": ["error", "never"],
        "max-len": ["error", 150, { "ignoreComments": true, "ignoreStrings": true, "ignoreTemplateLiterals": true }]
    }
}
